<h1>Give us your final activity information</h1>
<p>Please fill out the form below!</p>

Please tell us more about <%= @title.titleize %>!
<%= form_for @complete_activity do |f|%>
<%= f.hidden_field :title, :value => @title %>
 <%= label_tag(:description, "Describe your activity:") %><br>
 <%= f.text_area :description %>
 <br>
 <%= f.hidden_field :instructor_id, :value => @instructor_id %>
 <%= label_tag(:location, "Where will your activity be located?")%>
 <%= f.text_field :location%>
 <br>
 <%= label_tag(:photo, "Please submit any of your photos related to this activity.") %>
 <%= file_field_tag(:photo) %>
 <br>
 <%= label_tag(:duration, "What is your planned duration of this activity?") %>
 <%= f.text_field :duration%>
<br>
<input type="checkbox" name="tag" value="cooking">Cooking</input>
</br>
<input type="checkbox" name="tag" value="active">Active</input>
</br>
<input type="checkbox" name="tag" value="art">Art</input>
</br>
<input type="checkbox" name="tag" value="music">Music</input>
 <%= button_tag(type: 'submit', class: 'btn btn-primary') do%>
Submit
 <% end %>
<%end%>
