<div class="homepage-header">
  <p class = "transparent-header clearfix">
  <p class = "logo pull-left">
    <%= @name %>
  </p>
  <p class="login pull-right">
    <% if !current_user %>
    <%= link_to "Log In", new_user_session_path, class: "btn btn-primary", id: "login" %>
    <%= link_to "Sign Up", new_user_session_path, class: "btn btn-primary", id: "login" %>
    <%end %>
    <% if current_user %>
    <%= link_to "Sign Out", destroy_user_session_path, class: "btn btn-primary", id: "login", :method => :delete %>
    <% end %>
  </p>
</div>

