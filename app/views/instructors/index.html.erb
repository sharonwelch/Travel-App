<body class="instructors">
<nav class="navbar navbar-default navbar-static-top navbar-instructor">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/" style="color: #323333">Quirk</a>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-right">
        <li><a href="/users/sign_in" style="color: #323333">Log In</a></li>
        <li><a href="/users/sign_up" style="color: #323333">Sign Up</a></li>
      </ul>
    </div>
  </div>
</nav>

<h1 class="instructorsh1">Discover Activities</h1>
<h2 class="instructorsh2">Learn about our instructors and their passions to experience the local lifestyle.</h2>

<div class="btn-group">
   <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
     Filter by Activity Type
     <span class="caret"></span>
   </button>
   <ul class="dropdown-menu">
    <li><a href="/filter/cooking">Cooking</a></li>
    <li><a href="/filter/active">Active</a></li>
    <li><a href="/filter/art">Art</a></li>
    <li><a href="/filter/music">Music</a></li>
  </ul>
</div>

<div class = "container">
  <% n = 0 %>
  <% @allinstructors.each do |instructor| %>
    <%= link_to "#{instructor.first_name.capitalize} #{instructor.last_name.capitalize}", "/individualinstructor/#{instructor.id}" %>
    <br/>
    <%= instructor.activity_title.titleize %>
    <br/>
    <br/>
    <% n += 1 %>
  <% end %>

</div>
</body>
