<body class="admin">
  <nav class="navbar navbar-default navbar-static-top navbar-instructor">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/" style="color: #ff8e62">Wanderlocal</a>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li><a href="/apps_under_review">Applications Under Review</a></li>
          <li><a href="/acceptedapps">Accepted Applications</a></li>
          <li><a href="/rejectedapps">Rejected Applications</a></li>
          <li><%= link_to "Sign Out", destroy_user_session_path, class: "btn btn-primary sign-out-btn", :method => :delete, style: "color: #323333" %></li>
        </ul>
      </div>
    </div>
  </nav>

  <h1 class="applications">New Applications</h1>

  <% @number_of_apps = 0 %>

  <div class="admincontainer">
    <% @newapps.each do |app| %>
      <br/>
      <%= @number_of_apps += 1 %>.
      <%= app.first_name %>
      <%= app.last_name %>
      <br>
      <%= link_to "Review Application", "/reviewapp/#{app.id}", :value => "Review Application", :class => "btn btn-primary btn-admin"%>
    </br>
    <br>
    <%end%>
  </div>
</body>
